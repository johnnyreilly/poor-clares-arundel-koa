{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "server build",
            "type": "typescript",
            "tsconfig": "src\\server\\tsconfig.json",
            "options": {
				"shell": {
					"executable": "powershell.exe"
				}
			},
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "server watch",
            "type": "typescript",
            "tsconfig": "src\\server\\tsconfig.json",
            "option": "watch",
            "options": {
				"shell": {
					"executable": "powershell.exe"
				}
			},
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$tsc-watch"
        }
    ]
}